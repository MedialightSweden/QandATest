@using QandATest.DomainEntities;
@model Questionnaire

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="AdId" value="@ViewBag.AdId" />
        </div>
        <div class="form-group">
            <label asp-for="QuestionId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Order" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary" onclick="$('#divAdd').css('display', 'none');">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
